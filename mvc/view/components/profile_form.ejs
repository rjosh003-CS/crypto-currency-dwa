<form action="/user/<%= user.username>/profile/edit %>" method="POST" class="mt-4">

    <!-- inputs  -->
  <% if(typeof user !== undefined && user) {%>
    <!-- firstname -->
    <div class="mb-3">
      <label for="firstname" class="form-label">Firstname:</label>
      <input type="text" id="firstname" name="firstname" class="form-control" value="<%= user.firstname || '' %>" required>
    </div>
  
    <!-- middlename -->
    <div class="mb-3">
        <label for="middleName" class="form-label">Middle Name:</label>
        <% if (user.middleName) { %>
          <input type="text" id="middleName" name="middleName" class="form-control" value="<%= user.middleName %>">
        <% } else { %>
          <input type="text" id="middleName" name="middleName" class="form-control">
        <% } %>
    </div>
  
    <!-- lastname -->
    <div class="mb-3">
      <label for="lastname" class="form-label">LastName:</label>
      <input type="text" id="lastname" name="lastname" class="form-control" value="<%= user.lastname || '' %>">
    </div>
  
    <!-- username -->
    <div class="mb-3">
      <label for="username" class="form-label">Username:</label>
      <input type="text" id="username" name="username" class="form-control" value="<%= user.username || '' %>" required>
    </div>
  
    <!-- email -->
    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input type="email" id="email" name="email" class="form-control" value="<%= user.email || '' %>" required>
    </div>
  
    <!-- password -->
    <div class="mb-3">
      <label for="password" class="form-label">Password:</label>
      <input type="password" id="password" name="password" class="form-control" value="<%= user.password || '' %>" required>
    </div>
  
    <!-- confirm password -->
    <div class="mb-3">
      <label for="password2" class="form-label">Confirm Password:</label>
      <input type="password" id="password2" name="password2" class="form-control" value="<%= user.password2 || '' %>"  required>
    </div>
  
  <%}%>
  
    <!--  submit button -->
    <div class="mt-3">
      <div>
        <button type="submit" class="btn btn-primary mt-2 d-block text-center"><i class="fab fa-google"></i> Submit </button>
      </div>
    </div>
  
  </form>
  